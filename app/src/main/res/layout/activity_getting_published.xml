<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <RelativeLayout
        android:id="@+id/relOne"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name"
                android:textSize="@dimen/editTxt"
                android:hint="@string/name"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:maxLength="35"
                android:fontFamily="@font/gothic"
                android:drawableStart="@drawable/login"
                android:drawablePadding="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:inputType="none"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/viewOne"
            android:layout_width="match_parent"
            android:layout_below="@id/inputOne"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:background="@color/view_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputTwo"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_below="@+id/viewOne"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/email"
                android:textSize="@dimen/editTxt"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:fontFamily="@font/gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_n"
                android:inputType="none"
                android:maxLength="35"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/email"
                android:layout_marginStart="@dimen/_25sdp"
                android:drawablePadding="@dimen/_15sdp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/viewTwo"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/inputTwo"
            android:background="@color/view_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTwo"
            android:layout_marginTop="@dimen/_5sdp">
            <EditText
                android:id="@+id/phone"
                android:textSize="@dimen/editTxt"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:fontFamily="@font/gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone_number_n"
                android:maxLength="35"
                android:inputType="none"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/phonenumber"
                android:layout_marginStart="@dimen/_25sdp"
                android:drawablePadding="@dimen/_15sdp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/viewThree"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/inputThree"
            android:background="@color/view_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputFour"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewThree">
            <EditText
                android:textSize="@dimen/editTxt"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:layout_width="match_parent"
                android:fontFamily="@font/gothic"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:hint="@string/specializations"
                android:maxLength="35"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/specialization"
                android:layout_marginStart="@dimen/_25sdp"
                android:drawablePadding="@dimen/_15sdp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/viewFour"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/inputFour"
            android:background="@color/view_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewFour"
            android:layout_marginTop="@dimen/_5sdp">
            <EditText
                android:id="@+id/state"
                android:textSize="@dimen/editTxt"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:fontFamily="@font/gothic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/state"
                android:maxLength="35"
                android:inputType="textCapSentences"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/state"
                android:layout_marginStart="@dimen/_25sdp"
                android:drawablePadding="@dimen/_15sdp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/viewFive"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/inputFive"
            android:background="@color/view_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputSix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewFive"
            android:layout_marginTop="@dimen/_5sdp">
            <EditText
                android:id="@+id/city"
                android:textSize="@dimen/editTxt"
                android:fontFamily="@font/gothic"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/city"
                android:inputType="textCapSentences"
                android:maxLength="35"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/city"
                android:layout_marginStart="@dimen/_25sdp"
                android:drawablePadding="@dimen/_15sdp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/viewSix"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/inputSix"
            android:background="@color/view_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputSeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/viewSix">
            <EditText
                android:id="@+id/country"
                android:textSize="@dimen/editTxt"
                android:fontFamily="@font/gothic"
                android:textColor="@color/light_black"
                android:textColorHint="@color/colorgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:hint="@string/country"
                android:maxLength="35"
                android:background="@color/transparent"
                android:padding="@dimen/_5sdp"
                android:drawableStart="@drawable/country"
                android:layout_marginStart="@dimen/_25sdp"
                android:drawablePadding="@dimen/_15sdp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_height="1dp"
            android:layout_below="@+id/inputSeven"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/relTwo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:padding="@dimen/_10sdp"
            android:maxLength="200"
            android:background="@drawable/backbox"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:hint="@string/message"
            android:textSize="@dimen/editTxt"
            android:textColor="@color/light_black"
            android:textColorHint="@color/colorgrey"
            android:fontFamily="@font/gothic"
            android:inputType="textCapSentences"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnPublish"
        android:text="@string/next"
        android:textColor="@color/color_white"
        android:fontFamily="@font/gothicb"
        android:textSize="@dimen/btnTxt"
        android:background="@drawable/btnlogin"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_40sdp" />
</RelativeLayout>
