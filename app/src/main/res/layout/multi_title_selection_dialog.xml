<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/pref_loc_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Preferred Title"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_input"
            android:layout_below="@+id/pref_loc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">
            <EditText
                android:id="@+id/loc_search"
                android:textSize="@dimen/editTxt"
                android:hint="@string/search"
                android:maxLength="35"
                android:drawableStart="@drawable/search_with_diary"
                android:drawablePadding="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:fontFamily="@font/gothic"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"/>
            <!--android:drawableEnd="@drawable/job_location"-->
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/search_input"
            android:background="@color/view_color"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/multi_city_sel_recycler"
            android:layout_width="match_parent"
            android:layout_below="@+id/search_view"
            android:layout_above="@+id/view_cancel_done"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_height="match_parent"
            />
        <View
            android:id="@+id/view_cancel_done"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/cancel_done_lin_lay"
            android:background="@color/view_color"/>
        <LinearLayout
            android:id="@+id/cancel_done_lin_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/cancel_txt"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:text="CANCEL"/>
            <TextView
                android:id="@+id/done_txt"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="DONE"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>