<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--android:background="?attr/selectableItemBackgroundBorderless"-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">
            <include layout="@layout/timeline_top_head"
                android:id="@+id/top"/>
            <LinearLayout
                android:id="@+id/linOne"
                android:layout_width="match_parent"
                android:layout_below="@id/top"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/msgText"
                    android:text="@string/timelineMsg"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothicb"
                    android:layout_marginStart="@dimen/_10sdp"/>
                <ImageView
                    android:id="@+id/msgImage"
                    android:src="@drawable/no_img_placeholder"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/view_color"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <include layout="@layout/timeline_bottom"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>