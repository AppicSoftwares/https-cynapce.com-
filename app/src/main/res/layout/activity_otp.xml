<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alcanzar.cynapse.activity.OtpActivity"
    android:background="@drawable/bg">
    <TextView
        android:id="@+id/otp"
        android:text="@string/otp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/light_black"
        android:fontFamily="@font/gothicb"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/otpLogo"
        android:layout_below="@+id/otp"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:src="@drawable/lock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"/>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/otpLogo"
        android:padding="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_5sdp">
            <EditText
                android:id="@+id/one"
                android:background="@color/transparent"
                android:textSize="@dimen/_19sdp"
                android:inputType="number"
                android:padding="@dimen/_5sdp"
                android:maxLength="1"

                android:textColor="@color/fadeGrey"
                android:textColorHint="@color/fadeGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothicb"/>
            <requestFocus/>
            <!--android:imeOptions="actionNext"-->
            <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/view_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_5sdp">
            <EditText
                android:id="@+id/two"
                android:background="@color/transparent"
                android:textSize="@dimen/_19sdp"
                android:inputType="number"
                android:padding="@dimen/_5sdp"
                android:maxLength="1"
                android:textColor="@color/fadeGrey"
                android:textColorHint="@color/fadeGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothicb"/>
            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/view_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_5sdp">
            <EditText
                android:id="@+id/three"
                android:background="@color/transparent"
                android:textSize="@dimen/_19sdp"
                android:inputType="number"
                android:padding="@dimen/_5sdp"
                android:maxLength="1"
                android:textColor="@color/fadeGrey"
                android:textColorHint="@color/fadeGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothicb"/>
            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/view_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_5sdp">
            <EditText
                android:id="@+id/four"
                android:background="@color/transparent"
                android:textSize="@dimen/_19sdp"
                android:inputType="number"
                android:padding="@dimen/_5sdp"
                android:maxLength="1"
                android:textColor="@color/fadeGrey"
                android:textColorHint="@color/fadeGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothicb"/>
            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/view_color" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_below="@+id/lin"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_5sdp">
        <TextView
            android:id="@+id/timer_txt"
            android:text="00:00"
            android:layout_width="match_parent"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/color_black"
            android:fontFamily="@font/gothicb"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timer_txt"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">
            <TextView
                android:id="@+id/failedCase"
                android:text="Haven't received the OTP yet ?"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_11sdp"

                android:textColor="@color/fadeGrey"
                android:fontFamily="@font/gothicb"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/resend"
                android:layout_toEndOf="@+id/failedCase"
                android:text="@string/resend"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/gothicb"
                android:layout_below="@+id/timer_txt"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/btnVerify"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btnlogin"
        android:text="@string/verify"
        android:fontFamily="@font/gothicb"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/color_white"/>
</RelativeLayout>
