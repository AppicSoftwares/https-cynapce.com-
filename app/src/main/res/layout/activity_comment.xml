        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:orientation="horizontal"
                    android:padding="@dimen/_15sdp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3">

                        <TextView
                            android:id="@+id/txt_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/like_inner_icon"
                            android:drawablePadding="@dimen/_3sdp"
                            android:fontFamily="@font/gothicb"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="840"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3">

                        <TextView
                            android:id="@+id/txt_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/views"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/gothicb"
                            android:gravity="right"
                            android:paddingLeft="@dimen/_2sdp"
                            android:text="8,000 views"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardFor"
                android:padding="@dimen/_15sdp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_4sdp"
                                android:drawableStart="@drawable/like_blue"
                                android:fontFamily="@font/gothicb"
                                android:text="@string/_238_topics"
                                android:textColor="#5298ef"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4">

                            <TextView
                                android:id="@+id/txt_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableStart="@drawable/comments"
                                android:fontFamily="@font/gothicb"
                                android:text="@string/_3_528_replies"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3">

                            <TextView
                                android:id="@+id/share_commnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableLeft="@drawable/share_white"
                                android:fontFamily="@font/gothicb"
                                android:text="@string/share"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

