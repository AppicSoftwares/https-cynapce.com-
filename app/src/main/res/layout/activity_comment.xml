            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_expetview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardOne"
                android:fontFamily="@font/gothicb"
                android:padding="@dimen/_10sdp"
                android:text="Expert View"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_expert_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txt_expetview"
                tools:listitem="@layout/comments_layout_row"
                />
            <TextView
                android:id="@+id/txt_othercomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_expert_view"
                android:fontFamily="@font/gothicb"
                android:padding="@dimen/_10sdp"
                android:text="Other Comments"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_other_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txt_othercomments"
                tools:listitem="@layout/comments_layout_row"
                />
        </RelativeLayout>
    </ScrollView>
    <android.support.v7.widget.CardView
        android:id="@+id/bottom_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.85">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/msgbox"
                    android:fontFamily="@font/gothicb"
                    android:hint="@string/write_something_here"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="0.11"
                android:background="@drawable/send" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
