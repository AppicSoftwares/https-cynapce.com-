                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/chair_icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tick"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/gothicb"
                android:text="HOW MANY SEATS?"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_17sdp" />

            <LinearLayout
                android:id="@+id/lnr_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:weightSum="1">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_seat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_4sdp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gothic"
                        android:gravity="center_horizontal"
                        android:hint="@string/enter_the_seat"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt">

                    </EditText>
                </android.support.design.widget.TextInputLayout>


