<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">
            <ImageView
                android:id="@+id/topImage"
                android:layout_width="match_parent"

                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/no_img_placeholder"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/delete_deals"
                android:layout_width="@dimen/_20sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/rubbish_bin_g"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/category_type"
                android:layout_width="wrap_content"
                android:textColor="@color/color_black"
                android:text=""
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/gothicb"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/cate_spaslization"
                android:layout_below="@+id/category_type"
                android:layout_width="wrap_content"
                android:textColor="@color/color_black"
                android:text=""
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/gothicb"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>
            <LinearLayout
                android:layout_below="@+id/topImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title"
                        android:layout_margin="@dimen/_5sdp"
                        android:text=""
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothicb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/price"
                        android:text=""
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/gothicb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/view_color"
                        android:fontFamily="@font/gothicb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/btnBuy"
                        android:background="@drawable/rectangle"
                        android:layout_width="match_parent"
                        android:text="@string/buy"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/gothicb"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="@dimen/_30sdp" />
                    <Button
                        android:id="@+id/btnRent"
                        android:background="@drawable/rectangle"
                        android:layout_width="match_parent"
                        android:text="Lease"
                        android:visibility="gone"
                        android:padding="@dimen/_1sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/gothicb"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="@dimen/_30sdp" />
                    <Button
                        android:id="@+id/btn_im_intersted"
                        android:background="@drawable/rectangle"
                        android:layout_width="match_parent"
                        android:text="I'M INTERESTED"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/gothicb"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="@dimen/_30sdp" />
                    <TextView
                        android:id="@+id/brok_unbrok_txt"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="UNBROKERED"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/gothicb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
       </RelativeLayout>