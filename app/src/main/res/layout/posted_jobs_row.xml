<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp">
        <TextView
            android:id="@+id/title"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/gothicb"
            android:textColor="@color/light_black"
            android:text=""
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/timeAgo"
            android:text="@string/posted_today"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gothicb"
            android:textSize="@dimen/_8sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hospitalName"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/title"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/gothic"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/years"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@+id/hospitalName"
            android:fontFamily="@font/gothic"
            android:textColor="@color/colorgrey"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/specialization"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gothicb"
            android:textSize="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/timeAgo"
            android:layout_alignBottom="@+id/timeAgo"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-27dp"
            android:text="specialization" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gothicb"
            android:textSize="@dimen/_8sdp"
            android:layout_alignBottom="@+id/specialization"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="-28dp"
            android:text="Location" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/view_color"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/relone"
        android:layout_marginBottom="@dimen/_5sdp"/>
</RelativeLayout>