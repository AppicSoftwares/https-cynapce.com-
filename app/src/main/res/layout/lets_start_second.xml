    <TextView
        android:id="@+id/ThiredText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_140sdp"
        android:fontFamily="@font/gothicb"
        android:gravity="center"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:text="More Services coming soon..."
        android:textColor="@color/light_black"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_above="@id/btnStart"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/gothicb"
            android:gravity="center"
            android:text="A product by NVM Healthcare Pvt.Ltd."
            android:textColor="@color/color_black"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnStart"
        android:text="@string/let_s_start"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnblue"
        android:layout_width="@dimen/_200sdp"
