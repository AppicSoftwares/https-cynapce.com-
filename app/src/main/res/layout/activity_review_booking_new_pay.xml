<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReviewBookingNewPay">

    <include
        android:id="@+id/header"
        layout="@layout/header" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView

                        android:id="@+id/confrenceNameTv"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothicb"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/health_care_conference"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView

                        android:id="@+id/timeTv"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/img_time"

                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/gothicb"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="5:10 PM"
                        android:textSize="@dimen/_12sdp" />

                    <TextView

                        android:id="@+id/addressTv"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/gothicb"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Hazratganj , Lucknow"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/gray"></View>


                    <TextView

                        android:id="@+id/tot_packag"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothicb"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="5 Tickets"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/recycle_reviewbooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/gray"></View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/gothicb"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Sub Total"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rupss"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/totalTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gothicb"
                                android:gravity="right"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="0.00"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>



                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/gothicb"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="GST"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />


                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rupss"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/gstTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gothicb"
                                android:gravity="right"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="0.00"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/priceHikeContainerLl"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/gothicb"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Sub Total"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rupss"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp" />


                            <TextView
                                android:id="@+id/subTotalTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gothicb"
                                android:gravity="right"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="0.00"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>



                    </LinearLayout>

                    <TextView
                        android:id="@+id/priceHikePerTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothicb"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="priceHikePerTv"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/gothicb"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Hiked Amount"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rupss"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp" />


                            <TextView
                                android:id="@+id/hikeAmtTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gothicb"
                                android:gravity="right"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="0.00"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>



                    </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/gothicb"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Total"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rupss"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp" />


                            <TextView
                                android:id="@+id/grandTotalTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gothicb"
                                android:gravity="right"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="0.00"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <!--<TextView-->

                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->

                        <!--android:fontFamily="@font/gothicb"-->
                        <!--android:text="Have a Promocode ?"-->
                        <!--android:layout_weight="0.7"-->
                        <!--android:textColor="@color/light_black"-->
                        <!--android:textSize="@dimen/_15sdp"-->
                        <!--android:paddingLeft="@dimen/_15sdp"-->
                        <!--android:paddingTop="@dimen/_10sdp"-->
                        <!--android:paddingBottom="@dimen/_5sdp"/>-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="0.7">

                            <EditText
                                android:inputType="text"
                                android:id="@+id/promocode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:fontFamily="@font/gothic"
                                android:hint="Have a Promocode ?"
                                android:maxEms="15"
                                android:maxLength="25"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textSize="@dimen/editTxt" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/applyTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="0.3"
                            android:fontFamily="@font/gothicb"
                            android:gravity="right"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_15sdp"

                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Apply"
                            android:textColor="#75c8c3"
                            android:textSize="@dimen/_13sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/gothicb"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Coupon Discount"
                            android:textColor="#75c8c3"
                            android:textSize="@dimen/_12sdp" />



                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:backgroundTint="@color/color_black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_rupss"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/couponDiscountTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gothicb"
                                android:gravity="right"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:text="0.00"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/payLl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#429995"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="10">

                <TextView
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#429995"
                    android:fontFamily="@font/gothicb"
                    android:text="Pay "
                    android:textColor="@color/white"
                    android:textSize="@dimen/btnTxt" />

                <ImageView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:clickable="false"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/ic_rupss"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp" />

                <TextView
                    android:maxLength="10"
                    android:focusable="false"
                    android:clickable="false"
                    android:id="@+id/uploadresume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:background="#429995"
                    android:fontFamily="@font/gothicb"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btnTxt" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>