<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/productImg"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:src="@drawable/add_photos" />

            <ImageView
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toRightOf="@+id/productImg"
                android:id="@+id/productImg2"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_photos" />

            <ImageView
                android:layout_toRightOf="@+id/productImg2"
                android:id="@+id/productImg3"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_photos" />


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_below="@+id/productImg"
                android:id="@+id/imageRv"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_65sdp">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl"
            android:layout_marginStart="@dimen/_25sdp">
            <RelativeLayout
                android:id="@+id/rel_lay_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/state" />

                <Spinner
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/gothic"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/editTxt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/dropdownicon" />
            </RelativeLayout>

            <View
                android:id="@+id/viewCat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rel_lay_cat"
                android:background="@color/view_color" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewCat"
                android:layout_marginTop="@dimen/_5sdp">
                <EditText
                    android:id="@+id/edit_name"
                    android:textSize="@dimen/editTxt"
                    android:hint="Product Name"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:maxLength="35"
                    android:fontFamily="@font/gothic"
                    android:drawableStart="@drawable/login"
                    android:drawablePadding="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/viewname"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/inputName"
                android:background="@color/view_color"/>
            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/inputSpeciality"-->
                <!--android:layout_marginTop="@dimen/_5sdp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_below="@+id/viewname"-->
                <!--android:layout_height="wrap_content">-->
                <!--<EditText-->
                    <!--android:id="@+id/edit_speciality"-->
                    <!--android:textSize="@dimen/editTxt"-->
                    <!--android:textColor="@color/light_black"-->
                    <!--android:textColorHint="@color/colorgrey"-->
                    <!--android:fontFamily="@font/gothic"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="@string/specific_locality"-->
                    <!--android:inputType="text"-->
                    <!--android:maxLength="35"-->
                    <!--android:background="@color/transparent"-->
                    <!--android:padding="@dimen/_5sdp"-->
                    <!--android:drawableStart="@drawable/address"-->
                    <!--android:drawablePadding="@dimen/_15sdp"/>-->
            <!--</android.support.design.widget.TextInputLayout>-->
            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_below="@+id/viewname"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radioMyAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Address"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/gothic"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/_12sdp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioCurrentAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorgrey"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Current Address" />

                <RadioButton
                    android:id="@+id/radioEnterAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorgrey"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Enter Address" />

            </RadioGroup>
            <TextView
                android:id="@+id/my_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_12sdp"
                android:gravity="left"
                android:layout_below="@+id/radioGrp"
                android:padding="@dimen/_5sdp"
                android:text=""/>
            <TextView
                android:id="@+id/current_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_12sdp"
                android:gravity="left"
                android:visibility="gone"
                android:layout_below="@+id/my_address_txt"
                android:padding="@dimen/_5sdp"
                android:text=""/>
            <View
                android:id="@+id/viewaddr"
                android:layout_width="match_parent"
                android:layout_below="@id/current_address_txt"
                android:layout_height="1dp"
                android:background="@color/view_color"/>
            <RelativeLayout
                android:layout_below="@+id/viewaddr"
                android:id="@+id/location_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rel_lay_country"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/countryImg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/state"/>
                    <Spinner
                        android:id="@+id/country"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothic"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_5sdp"/>
                    <AutoCompleteTextView
                        android:id="@+id/country_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/countryImg"
                        android:fontFamily="@font/gothic"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_country"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/dropdownicon"/>
                </RelativeLayout>

                <View
                    android:id="@+id/viewcountry"
                    android:layout_width="match_parent"
                    android:layout_below="@id/rel_lay_country"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/view_color"/>
                <RelativeLayout
                    android:id="@+id/rel_lay_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible"
                    android:layout_below="@+id/viewcountry">
                    <ImageView
                        android:id="@+id/stateImg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/city"/>
                    <Spinner
                        android:id="@+id/state"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothic"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_5sdp"/>
                    <AutoCompleteTextView
                        android:id="@+id/state_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/stateImg"
                        android:fontFamily="@font/gothic"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_state"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/dropdownicon"/>
                </RelativeLayout>

                <View
                    android:id="@+id/viewOne_"
                    android:layout_width="match_parent"
                    android:layout_below="@id/rel_lay_state"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/view_color"/>
                <RelativeLayout
                    android:id="@+id/rel_lay_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:layout_below="@+id/viewOne_"
                    android:layout_marginTop="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/cityImg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/equipment_icon"/>
                    <Spinner
                        android:id="@+id/city"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothic"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_5sdp"/>
                    <AutoCompleteTextView
                        android:id="@+id/city_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/cityImg"
                        android:fontFamily="@font/gothic"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_city"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/dropdownicon"/>

                </RelativeLayout>
                <View
                    android:id="@+id/city_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:layout_below="@+id/rel_lay_city"
                    android:background="@color/view_color"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_lay_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/location_select">

                <fragment
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:id="@+id/fragmen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/fragmen"
                    android:id="@+id/inputStreet"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:enabled="false"
                        android:id="@+id/edit_street"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:fontFamily="@font/gothic"
                        android:drawablePadding="@dimen/_15sdp"
                        android:padding="@dimen/_5sdp"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/viewStreet"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputStreet"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputSpecial"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_lay_loc">
                <EditText
                    android:id="@+id/edit_special"
                    android:textSize="@dimen/editTxt"
                    android:hint="@string/enter_specialization"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:maxLength="35"
                    android:fontFamily="@font/gothic"
                    android:drawableStart="@drawable/specialization"
                    android:drawablePadding="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/viewSpl"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/inputSpecial"
                android:background="@color/view_color"/>
            <RelativeLayout
                android:id="@+id/rel_lay_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/viewSpl"
                android:padding="@dimen/_5sdp">
                <ImageView
                    android:id="@+id/SpImg"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/specialization"/>
                <Spinner
                    android:id="@+id/speciality"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"/>
                <AutoCompleteTextView
                    android:id="@+id/spl_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/SpImg"
                    android:maxLength="30"
                    android:fontFamily="@font/gothic"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_specialization"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>
                <ImageView
                    android:padding="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/dropdownicon"/>
            </RelativeLayout>
            <View
                android:id="@+id/viewspeciality"
                android:layout_width="match_parent"
                android:layout_below="@id/rel_lay_speciality"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/view_color"/>
            <RelativeLayout
                android:id="@+id/other_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewspeciality"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <EditText
                        android:id="@+id/edit_others"
                        android:textSize="@dimen/editTxt"
                        android:hint="@string/others_"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:maxLength="35"
                        android:fontFamily="@font/gothic"
                        android:drawableStart="@drawable/login"
                        android:drawablePadding="@dimen/_15sdp"
                        android:padding="@dimen/_5sdp"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputothers"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputAge"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_below="@+id/viewSpl"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_age"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Age"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/age_icon"
                    android:drawablePadding="@dimen/_15sdp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/view_age"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/inputAge"
                android:background="@color/view_color"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputPrice"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_below="@+id/view_age"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_price"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/price"
                    android:inputType="number"
                    android:maxLength="35"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/rupee"
                    android:drawablePadding="@dimen/_15sdp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/view_price"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/inputPrice"
                android:background="@color/view_color"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_price"
                android:layout_marginTop="@dimen/_5sdp">
                <EditText
                    android:id="@+id/edit_cont_email"
                    android:textSize="@dimen/editTxt"
                    android:hint="@string/email_"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:maxLength="35"
                    android:fontFamily="@font/gothic"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/viewPhone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/inputContact"
                android:background="@color/view_color"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_contact_no"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_below="@+id/viewPhone"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_contact_no"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contact_no_"
                    android:inputType="number"
                    android:maxLength="10"
                    android:enabled="false"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/phonenumber"
                    android:drawablePadding="@dimen/_15sdp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/view_contact_no"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/input_contact_no"
                android:background="@color/view_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_contact_no"
                android:padding="@dimen/_5sdp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/area"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/quantity"
                        android:inputType="number"
                        android:maxLength="20"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:id="@+id/viewQty"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputQty"
                    android:background="@color/view_color" />

                <EditText
                    android:id="@+id/ed_status"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_below="@+id/viewQty"
                    android:padding="@dimen/_10sdp"
                    android:maxLength="500"
                    android:background="@drawable/backbox"
                    android:gravity="start"
                    android:hint="@string/description_box_placeholder"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:fontFamily="@font/gothic"
                    android:scrollbars="vertical"/>
                <Button
                    android:id="@+id/btnPublish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:background="@drawable/btnlogin"
                    android:fontFamily="@font/gothicb"
                    android:text="@string/post"
                    android:layout_below="@+id/ed_status"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/btnTxt" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
