<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alcanzar.cynapse.fragments.GettingPublishedFragment">
    <!--<include layout="@layout/header"-->
    <!--android:id="@+id/header"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:layout_below="@id/header"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/_15sdp"
                    android:drawableStart="@drawable/login"
                    android:fontFamily="@font/gothic"
                    android:hint="@string/name_n"
                    android:inputType="textCapSentences"
                    android:maxLength="35"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/editTxt" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/_15sdp"
                    android:drawableStart="@drawable/email"
                    android:fontFamily="@font/gothic"
                    android:hint="@string/email_n"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:maxLength="35"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/editTxt" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/_15sdp"
                    android:drawableStart="@drawable/phonenumber"
                    android:fontFamily="@font/gothic"
                    android:hint="@string/phone_number_n"
                    android:inputType="number"
                    android:enabled="false"
                    android:maxLength="10"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/editTxt" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/mPImg"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/medicalprofile" />

                <Spinner
                    android:id="@+id/medicalProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/mPImg"
                    android:visibility="gone" />

                <AutoCompleteTextView
                    android:id="@+id/medicalProfileauto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/mPImg"
                    android:layout_toStartOf="@+id/crossC"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/gothic"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_medical_profile"
                    android:maxLength="30"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>

                <ImageButton
                    android:id="@+id/crossC"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/cross"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <RelativeLayout
                android:id="@+id/other_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/login"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/others_"
                        android:inputType="text"
                        android:maxLength="35"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputothers"
                    android:background="@color/view_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/jTImg"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/my_job" />

                <Spinner
                    android:id="@+id/jobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/jTImg"
                    android:background="@color/transparent"
                    android:fontFamily="@font/gothic"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/editTxt" />

                <AutoCompleteTextView
                    android:id="@+id/Title_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/crossTitle"
                    android:layout_toRightOf="@+id/jTImg"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter Title"
                    android:maxLength="30"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>

                <ImageButton
                    android:id="@+id/crossTitle"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/cross"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/dropdownicon"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <RelativeLayout
                android:id="@+id/other_title_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputtitleothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_title_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/login"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/others_"
                        android:inputType="text"
                        android:maxLength="35"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputtitleothers"
                    android:background="@color/view_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Spl_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/jSImg"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/specialization" />

                <Spinner
                    android:id="@+id/jobSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/jSImg"
                    android:visibility="gone" />

                <AutoCompleteTextView
                    android:id="@+id/Spealization_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/crossS"
                    android:layout_toRightOf="@+id/jSImg"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter Specialization"
                    android:maxLength="30"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>

                <ImageButton
                    android:id="@+id/crossS"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/cross"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/spl_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <RelativeLayout
                android:id="@+id/other_spl_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputsplothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_spl_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/login"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/others_"
                        android:inputType="text"
                        android:maxLength="35"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputsplothers"
                    android:background="@color/view_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/subS_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/sSImg"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/age_icon" />

                <Spinner
                    android:id="@+id/subSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/sSImg"
                    android:background="@color/transparent"
                    android:fontFamily="@font/gothic"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/editTxt"
                    android:visibility="gone" />

                <AutoCompleteTextView
                    android:id="@+id/SubS_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/crossSubS"
                    android:layout_toRightOf="@+id/sSImg"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter SubSpecialization"
                    android:maxLength="30"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>

                <ImageButton
                    android:id="@+id/crossSubS"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/cross"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/dropdownicon"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/subS_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <RelativeLayout
                android:id="@+id/other_sub_spl_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputSub_splothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_Sub_spl_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/login"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/others_"
                        android:inputType="text"
                        android:maxLength="35"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputSub_splothers"
                    android:background="@color/view_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dept_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/deptImg"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/medicalprofile" />

                <Spinner
                    android:id="@+id/dept_dd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/deptImg"
                    android:visibility="gone" />

                <AutoCompleteTextView
                    android:id="@+id/dept_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/cross_dept"
                    android:layout_toRightOf="@+id/deptImg"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter Department"
                    android:maxLength="30"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>

                <ImageButton
                    android:id="@+id/cross_dept"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="center"
                    android:src="@drawable/cross"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/dept_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/other_dept_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputdeptothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_dept_others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/login"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/others_"
                        android:inputType="text"
                        android:maxLength="35"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputdeptothers"
                    android:background="@color/view_color" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewCat"
                android:padding="@dimen/_5sdp">

                <RadioButton
                    android:id="@+id/radioMyAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/gothic"
                    android:padding="@dimen/_5sdp"
                    android:text="My Address"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioCurrentAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Current Address"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/radioEnterAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Enter Address"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/_12sdp" />

            </RadioGroup>


            <TextView
                android:id="@+id/my_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGrp"
                android:gravity="left"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/current_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_address_txt"
                android:gravity="left"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <View
                android:id="@+id/viewaddr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/current_address_txt"
                android:background="@color/view_color" />

            <RelativeLayout
                android:id="@+id/rel_lay_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewaddr"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rel_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/cImg"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/country" />

                    <Spinner
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toEndOf="@id/cImg"
                        android:visibility="gone" />

                    <AutoCompleteTextView
                        android:id="@+id/country_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/cImg"
                        android:layout_toStartOf="@+id/crossCount"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gothic"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_country"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <ImageButton
                        android:id="@+id/crossCount"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:scaleType="center"
                        android:src="@drawable/cross"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_country"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/crossCount"
                        android:background="@color/view_color" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rel_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_below="@+id/rel_country"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/sImg"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/state" />

                    <Spinner
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toEndOf="@id/sImg"
                        android:visibility="gone" />

                    <AutoCompleteTextView
                        android:id="@+id/state_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/sImg"
                        android:layout_toStartOf="@+id/crossState"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gothic"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_state"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <ImageButton
                        android:id="@+id/crossState"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:scaleType="center"
                        android:src="@drawable/cross"
                        android:visibility="gone" />
                    <View
                        android:id="@+id/view_state"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/crossState"
                        android:background="@color/view_color" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rel_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_below="@+id/rel_state"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/cityImg"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/city" />

                    <Spinner
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toEndOf="@id/cityImg"
                        android:visibility="gone" />

                    <AutoCompleteTextView
                        android:id="@+id/city_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/cityImg"
                        android:layout_toStartOf="@+id/crossCity"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gothic"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_city"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <ImageButton
                        android:id="@+id/crossCity"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@android:color/transparent"
                        android:scaleType="center"
                        android:src="@drawable/cross"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_house"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/crossCity"
                        android:background="@color/view_color" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rel_house"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_below="@+id/rel_city"
                    android:padding="@dimen/_5sdp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_6sdp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight=".8"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableStart="@drawable/room"
                            android:fontFamily="@font/gothic"
                            android:gravity="center_vertical"
                            android:hint="@string/house_no_street"
                            android:maxLines="2"
                            android:singleLine="true"
                            android:textColorHint="@color/colorgrey"
                            android:textSize="@dimen/_12sdp">

                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rel_house"
                    android:background="@color/view_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_addresss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/li"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <fragment
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:id="@+id/fragmen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                </LinearLayout>


                <AutoCompleteTextView
                    android:layout_below="@+id/li"
                    android:textColor="@color/color_black"
                    android:enabled="false"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="@font/gothic"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/editTxt" />

                <View
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/address"
                    android:layout_width="match_parent"
