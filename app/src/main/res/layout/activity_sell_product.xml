<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center">

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/imageRv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp">
        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/productImg"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:src="@drawable/add_photos" />

            <ImageView
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toRightOf="@+id/productImg"
                android:id="@+id/productImg2"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_photos" />

            <ImageView
                android:layout_toRightOf="@+id/productImg2"
                android:id="@+id/productImg3"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_photos" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp">
            <RelativeLayout
                android:id="@+id/rel_lay_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/state" />

                <Spinner
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/gothic"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/editTxt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/dropdownicon" />
            </RelativeLayout>

            <View
                android:id="@+id/viewCat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rel_lay_cat"
                android:background="@color/view_color" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewCat">
                <EditText
                    android:id="@+id/ed_name"
                    android:textSize="@dimen/editTxt"
                    android:hint="Equipment Name"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:maxLength="35"
                    android:fontFamily="@font/gothic"
                    android:drawableStart="@drawable/login"
                    android:drawablePadding="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_below="@id/inputOne"
                android:layout_height="1dp"
                android:background="@color/view_color"/>
            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_below="@+id/viewOne"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radioMyAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Address"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/gothic"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/_12sdp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioCurrentAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorgrey"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Current Address" />

                <RadioButton
                    android:id="@+id/radioEnterAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorgrey"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Enter Address" />

            </RadioGroup>
            <TextView
                android:id="@+id/my_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_12sdp"
                android:gravity="left"
                android:layout_below="@+id/radioGrp"
                android:padding="@dimen/_5sdp"
                android:text=""/>
            <TextView
                android:id="@+id/current_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_12sdp"
                android:gravity="left"
                android:visibility="gone"
                android:layout_below="@+id/my_address_txt"
                android:padding="@dimen/_5sdp"
                android:text=""/>
            <View
                android:id="@+id/viewaddr"
                android:layout_width="match_parent"
                android:layout_below="@id/current_address_txt"
                android:layout_height="1dp"
                android:background="@color/view_color"/>

            <RelativeLayout
                android:layout_below="@+id/viewaddr"
                android:id="@+id/location_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rel_lay_country"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/countryImg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/state"/>
                    <Spinner
                        android:id="@+id/country"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothic"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_5sdp"/>
                    <AutoCompleteTextView
                        android:id="@+id/country_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/countryImg"
                        android:fontFamily="@font/gothic"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_country"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/dropdownicon"/>
                </RelativeLayout>

                <View
                    android:id="@+id/viewcountry"
                    android:layout_width="match_parent"
                    android:layout_below="@id/rel_lay_country"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/view_color"/>
                <RelativeLayout
                    android:id="@+id/rel_lay_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible"
                    android:layout_below="@+id/viewcountry">
                    <ImageView
                        android:id="@+id/stateImg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/city"/>
                    <Spinner
                        android:id="@+id/state"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothic"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_5sdp"/>
                    <AutoCompleteTextView
                        android:id="@+id/state_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/stateImg"
                        android:fontFamily="@font/gothic"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_state"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/dropdownicon"/>
                </RelativeLayout>

                <View
                    android:id="@+id/viewOne_"
                    android:layout_width="match_parent"
                    android:layout_below="@id/rel_lay_state"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/view_color"/>
                <RelativeLayout
                    android:id="@+id/rel_lay_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:padding="@dimen/_5sdp"
                    android:layout_below="@+id/viewOne_"
                    android:layout_marginTop="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/cityImg"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/equipment_icon"/>
                    <Spinner
                        android:id="@+id/city"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/gothic"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/_5sdp"/>
                    <AutoCompleteTextView
                        android:id="@+id/city_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/cityImg"
                        android:fontFamily="@font/gothic"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_city"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/_12sdp">

                        <requestFocus />
                    </AutoCompleteTextView>
                    <ImageView
                        android:padding="@dimen/_15sdp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/dropdownicon"/>

                </RelativeLayout>
                <View
                    android:id="@+id/city_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:layout_below="@+id/rel_lay_city"
                    android:background="@color/view_color"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_lay_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/location_select">

                <fragment
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:id="@+id/fragmen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/fragmen"
                    android:id="@+id/inputStreet"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:enabled="false"
                        android:id="@+id/edit_street"
                        android:textSize="@dimen/editTxt"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:fontFamily="@font/gothic"
                        android:drawablePadding="@dimen/_15sdp"
                        android:padding="@dimen/_5sdp"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"/>
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/viewStreet"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputStreet"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_lay_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_lay_loc"
                android:padding="@dimen/_5sdp">
                <ImageView
                    android:id="@+id/SpImg"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/specialization"/>
                <Spinner
                    android:id="@+id/speciality"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"/>
                <AutoCompleteTextView
                    android:id="@+id/spl_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/SpImg"
                    android:maxLength="30"
                    android:fontFamily="@font/gothic"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:hint="Select Equipment Category"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp">

                    <requestFocus />
                </AutoCompleteTextView>
                <ImageView
                    android:padding="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/dropdownicon"/>
            </RelativeLayout>

            <View
                android:id="@+id/viewspeciality"
                android:layout_width="match_parent"
                android:layout_below="@id/rel_lay_speciality"
                android:layout_height="1dp"
                android:background="@color/view_color"/>
            <RelativeLayout
                android:id="@+id/other_rel_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewspeciality"
                android:visibility="gone">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <EditText
                        android:id="@+id/edit_others"
                        android:textSize="@dimen/editTxt"
                        android:hint="@string/others_"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:maxLength="35"
                        android:fontFamily="@font/gothic"
                        android:drawableStart="@drawable/login"
                        android:drawablePadding="@dimen/_15sdp"
                        android:padding="@dimen/_5sdp"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"/>
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/inputothers"
                    android:background="@color/view_color"/>
            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/other_rel_lay">
                <EditText
                    android:id="@+id/ed_age"
                    android:textSize="@dimen/editTxt"
                    android:hint="Age of Equipment"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:maxLength="2"
                    android:fontFamily="@font/gothic"
                    android:drawableStart="@drawable/age_icon"
                    android:drawablePadding="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:id="@+id/viewFive"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/inputFour"
                android:background="@color/view_color"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputTwo"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_below="@+id/viewFive"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ed_price"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:inputType="number"
                    android:maxLength="35"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/rupee"
                    android:drawablePadding="@dimen/_15sdp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/inputTwo"
                android:background="@color/view_color"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewTwo"
                android:layout_marginTop="@dimen/_5sdp">
                <EditText
                    android:id="@+id/edit_cont_email"
                    android:textSize="@dimen/editTxt"
                    android:hint="@string/email_"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:maxLength="35"
                    android:enabled="false"
                    android:fontFamily="@font/gothic"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:id="@+id/viewPhone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/inputContact"
                android:background="@color/view_color"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputContact_no_"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_below="@+id/viewPhone"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_contact_no"
                    android:textSize="@dimen/editTxt"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/colorgrey"
                    android:fontFamily="@font/gothic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_number_n"
                    android:inputType="number"
                    android:maxLength="10"
                    android:enabled="false"
                    android:background="@color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/phonenumber"
                    android:drawablePadding="@dimen/_15sdp"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:id="@+id/viewCont"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/inputContact_no_"
                android:background="@color/view_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewCont">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputQty"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edit_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_15sdp"
                        android:drawableStart="@drawable/area"
                        android:fontFamily="@font/gothic"
                        android:hint="@string/quantity"
                        android:inputType="number"
                        android:maxLength="20"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:textSize="@dimen/editTxt" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/viewQty"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_below="@+id/inputQty"
                    android:background="@color/view_color" />
                <EditText
                    android:id="@+id/ed_status"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_below="@+id/viewQty"
                    android:padding="@dimen/_10sdp"
                    android:maxLength="500"
                    android:background="@drawable/backbox"
