<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alcanzar.cynapse.fragments.DashBoardFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cardTwo"
            android:visibility="visible"
            android:layout_below="@id/cardOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:layout_margin="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/profilePic"
                        android:src="@drawable/avatar"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"/>
                    <EditText
                        android:id="@+id/msgText"
                        android:textColor="@color/light_black"
                        android:textColorHint="@color/colorgrey"
                        android:fontFamily="@font/gothicb"
                        android:textSize="@dimen/_10sdp"
                        android:inputType="textCapSentences"
                        android:background="@drawable/msgbox"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:hint="@string/write_something_here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnSend"
                    android:background="@drawable/send"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.11"
                    android:layout_height="@dimen/_30sdp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_below="@id/cardTwo"
            android:layout_height="match_parent"
            tools:listitem="@layout/timeline_row"/>
    </RelativeLayout>
</FrameLayout>
