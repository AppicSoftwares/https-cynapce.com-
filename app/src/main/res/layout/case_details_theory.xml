<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">
    <include layout="@layout/header"
        android:id="@+id/top"/>
    <LinearLayout
        android:id="@+id/relOne"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".499"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:text="Total Questions"
                android:textColor="@color/view_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/gothicb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tot_ques_"
                android:text="@string/number"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/view_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/gothicb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight=".008"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_40sdp"
            android:background="#DEE0E4"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".498"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp">
            <TextView
                android:text="Questions Attempted"
                android:textColor="@color/view_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/gothicb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ques_attempt"
                android:text="@string/number"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/view_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/gothicb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cardOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/relOne"
        app:cardElevation="@dimen/_4sdp"
        app:contentPadding="@dimen/_18sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/question"
                android:text=""
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:fontFamily="@font/gothicb"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/ans_txt_lin_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/cardOne"
        android:orientation="vertical"
        android:visibility="visible">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_4sdp"
        app:contentPadding="@dimen/_15sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/answerText"
                android:text="@string/answer"
                android:layout_centerHorizontal="true"
                android:textColor="@color/light_black"
                android:fontFamily="@font/gothicb"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/answer"
                android:text=""
                android:layout_below="@id/answerText"
                android:padding="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorgrey"
                android:fontFamily="@font/gothicb"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/option_lin_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardOne"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_20sdp">
            <TextView
                android:id="@+id/optionOne"
                android:text=""
                android:textColor="@color/colorgrey"
                android:padding="@dimen/_12sdp"
                android:gravity="center"
                android:fontFamily="@font/gothicb"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_20sdp">
            <TextView
                android:id="@+id/optionTwo"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/colorgrey"
                android:padding="@dimen/_12sdp"
                android:gravity="center"
                android:fontFamily="@font/gothicb"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnPrev"
        android:layout_width="@dimen/_120sdp"
        android:layout_margin="@dimen/_25sdp"
        android:text="@string/previous"
        android:textSize="@dimen/btnTxt"
        android:textColor="@color/color_white"
        android:fontFamily="@font/gothicb"
        android:background="@drawable/btnlogin"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/btnNext"
        android:layout_width="@dimen/_120sdp"
        android:layout_margin="@dimen/_25sdp"
        android:text="@string/next"
        android:textSize="@dimen/btnTxt"
        android:textColor="@color/color_white"
        android:fontFamily="@font/gothicb"
        android:background="@drawable/btnlogin"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:id="@+id/btnDone"
        android:layout_width="@dimen/_120sdp"
        android:layout_margin="@dimen/_25sdp"
        android:text="done"
        android:visibility="gone"
        android:textSize="@dimen/btnTxt"
        android:textColor="@color/color_white"
        android:fontFamily="@font/gothicb"
        android:background="@drawable/btnlogin"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>